# Database (auto-constructed in Docker from POSTGRES_PASSWORD)
DATABASE_URL=postgresql://harmony:changeme@localhost:5432/harmony
POSTGRES_PASSWORD=changeme

# NextAuth
NEXTAUTH_SECRET=your-secret-here
# IMPORTANT: Set this to your actual server URL (not localhost) for login redirects to work
NEXTAUTH_URL=http://localhost:3000

# LLM Provider: openai | claude | openai_compatible
LLM_PROVIDER=openai
LLM_API_KEY=your-api-key-here
LLM_BASE_URL=https://api.openai.com/v1
LLM_MODEL=gpt-4o  # or claude-sonnet-4-5-20250929 for claude provider

# FileRun integration
FILERUN_BASE_URL=http://localhost:8080

# Cron security secret for /api/cron/bump-lessons
CRON_SECRET=replace-with-a-long-random-secret
